3.#include "iostream"
using namespace std;

int main() 
{
    setlocale(LC_CTYPE, "rus");
    int n1 = 0, n2 = 0, n3 = 0;
 
    int count = 0;
    for (int i = 100; i <= 999; i++)
    {
        n1 = i / 100;
        n2 = (i / 10) % 10;
        n3 = i % 10;
 
        if (n1 != n2&&n2 != n3&&n1 != n3)
        {
            count++;        
        }
    }
    cout << count << endl;
    
    return 0;
}

10.#include "iostream"
using namespace std;

int main() {
    setlocale(LC_CTYPE, "rus");
    int h, a, w;
    cout << "Введите высоту шахматной доски.\nh = ";
    cin >> h;
    cout << "Введите ширину шахматной доски.\nw = ";
    cin >> w;
    cout << "Введите величину ячейки шахматной доски.\na = ";
    cin >> a;
    for (int i = 0; i < h; i++)     
    {
        if (i % 2 == 0)
            for (int i = 0; i < w/2; i++)     
            {
                for (int i = 0; i < a; i++)
                    cout << "*";
                for (int i = 0; i < a; i++)
                    cout << "-";
            }
        else 
            for (int i = 0; i < w/2; i++)     
            {
                for (int i = 0; i < a; i++)
                    cout << "-";
                for (int i = 0; i < a; i++)
                    cout << "*";
            }
        cout << "\n";
    }
    cout << "\n\n";
    return 0;
}
